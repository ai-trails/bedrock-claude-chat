# Build stage
FROM public.ecr.aws/docker/library/node:18-bullseye-slim AS build

WORKDIR /app

COPY package.json package-lock.json ./
RUN npm ci

COPY . .

ARG DOT_ENV_FILE
COPY ${DOT_ENV_FILE} /app/.env.local

RUN npm run build

# Production stage
FROM public.ecr.aws/docker/library/nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]